<div class="login-container-wrapper">
    <div class="from-outer-wrapper">
        <div class="form-heading">
            <h1> Login </h1>
        </div>
        <form id="user-login-user" action="/user/login" method="post">
            {{#if message}}
                <div class="alert-danger message-container">{{message}}</div>
                <br>
            {{/if}}
            <div class="form-group">
                <label for="username">User Name*</label>
                <input type="text" id="username" name="username" class="form-control">
            </div>
            <div class="form-group">
                <label for="password">Password*</label>
                <input type="password" id="password" name="password" class="form-control">
            </div>
            {{!-- <input type="hidden" name="_csrf" value="{{ csrfToken }}"> --}}
            <div class="btn-cta-wrapper login-btn-wrapper">
                <button type="submit" class="btn login-action-btn btn-style btn-primary">
                    Log In
                </button>
            </div>
        </form>
    </div>
</div>